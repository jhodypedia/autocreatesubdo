<!doctype html>
<html>
<head><%- include('partials/head', { title: 'Public Subdomains' }) %></head>
<body>
  <%- include('partials/nav') %>
  <main class="container py-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <h4>Public Subdomains on <strong><%= domain %></strong></h4>
        <div class="row g-3 mt-3">
          <% subs.forEach(s => { %>
            <div class="col-md-6">
              <div class="p-3 border rounded d-flex justify-content-between align-items-start hover-lift">
                <div>
                  <a href="http://<%= s.name %>.<%= domain %>" target="_blank" class="fw-bold d-block"><%= s.name %>.<%= domain %></a>
                  <small class="text-muted"><%= s.target %> • <%= s.owner %> • <%= s.created_at %></small>
                </div>
                <div class="ms-2">
                  <a class="btn btn-sm btn-outline-primary" href="http://<%= s.name %>.<%= domain %>" target="_blank"><i class="fa-solid fa-arrow-up-right-from-square"></i></a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

        <div class="mt-4 text-center">
          <%- adScript || '<div class=\"p-3 border rounded\">Place Adsterra script in Admin Settings</div>' %>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
